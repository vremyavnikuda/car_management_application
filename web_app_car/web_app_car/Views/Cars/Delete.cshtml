@model web_app_car.Models.Cars

@{
    ViewData["Title"] = "Удаление автомобиля";
}

<h2>Удалить автомобиль</h2>

<div class="card mb-4">
    <div class="card-header">
        <h4>@Model.Brand @Model.Model (@Model.YearOfManufacture)</h4>
    </div>
    <div class="card-body">
        <p><strong>Марка:</strong> @Model.Brand</p>
        <p><strong>Модель:</strong> @Model.Model</p>
        <p><strong>Год выпуска:</strong> @Model.YearOfManufacture</p>
        <p><strong>Тип топлива:</strong> @Model.FuelType</p>
        <p><strong>Цена:</strong> @Model.Price.ToString("C")</p>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>