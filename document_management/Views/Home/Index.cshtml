    <!-- Statistics Section -->
    <div class="container my-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-file-earmark-text display-4 text-primary mb-3"></i>
                        <h3 class="card-title">@Model.TotalDocuments</h3>
                        <p class="card-text text-muted">Всего документов</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Распределение по типам</h5>
                        <div class="row g-3">
                            @foreach (var type in Model.DocumentTypes)
                            {
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="bi bi-file-earmark-text text-primary fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0">@type.Type</h6>
                                            <small class="text-muted">@type.Count документов</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Documents Section -->
    <div class="container my-5">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">Последние документы</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentDocuments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Название</th>
                                    <th>Тип</th>
                                    <th>Дата создания</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doc in Model.RecentDocuments)
                                {
                                    <tr>
                                        <td>@doc.Title</td>
                                        <td><span class="badge bg-secondary">@doc.FileType</span></td>
                                        <td>@doc.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <a asp-controller="Documents" asp-action="Details" asp-route-id="@doc.Id"
                                                class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="mt-3 text-muted">Документы пока не добавлены</p>
                        <a asp-controller="DocumentUpload" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Добавить первый документ
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container my-5">
        <h2 class="text-center mb-5">Возможности системы</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Безопасное хранение</h5>
                        <p class="card-text text-muted">Надежное хранение документов с контролем доступа</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-clock-history display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Контроль версий</h5>
                        <p class="card-text text-muted">Отслеживание всех изменений в документах</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-search display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Умный поиск</h5>
                        <p class="card-text text-muted">Быстрый поиск по метаданным и содержимому</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Здесь можно добавить интерактивность при необходимости
    </script>
}
